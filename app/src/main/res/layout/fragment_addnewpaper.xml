<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addnewpaperFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Add new Paper " />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:hint="Paper Title"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txttitle"
            >
        </com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:id="@+id/bulletButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/format_list_bulleted_24"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
         />

        <Button
            android:drawableLeft="@drawable/numbering"
            android:paddingLeft="20dip"
            android:paddingRight="20dip"
            android:id="@+id/numberButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
             />
    </LinearLayout>
    <EditText
        android:textAlignment="center"
        android:hint="Enter Your Paper Content Here..."
        android:inputType="textMultiLine|textCapSentences"
        android:gravity="start|top"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:id="@+id/txtpapercontent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:isScrollContainer="true"
        >

    </EditText>
    <Button
        android:id="@+id/btnsavepaper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Save Paper" />

</LinearLayout>